package template;

import logist.topology.Topology.City;

public class State {
	private City from;
	private City to;
	
	public State(City f, City t){
		from = f;
		to = t;
	}

	public City getFrom() {
		return from;
	}

	public void setFrom(City from) {
		this.from = from;
	}

	public City getTo() {
		return to;
	}

	public void setTo(City to) {
		this.to = to;
	}
	
	public boolean haveDestination(){
		return to != null;
	}
}
