package template;

import logist.topology.Topology.City;

public class Reward {
	private City c;
	private boolean b;
	private double r;
	
	public Reward(City city, boolean bool,double reward){
		c=city;
		b=bool;
		r = reward;
	}

	public City getC() {
		return c;
	}

	public void setC(City c) {
		this.c = c;
	}

	public boolean isB() {
		return b;
	}

	public void setB(boolean b) {
		this.b = b;
	}

	public double getR() {
		return r;
	}

	public void setR(double r) {
		this.r = r;
	}
	
	
}
